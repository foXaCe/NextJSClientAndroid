<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    android:backgroundTint="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header avec gradient et logo -->
        <RelativeLayout
            android:id="@+id/supplierHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_header_gradient_solagora"
            android:padding="20dp">

            <!-- Logo et nom -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <!-- Logo avec background circulaire -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/supplierLogo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_solagora"
                        app:tint="@color/solagora_primary" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Nom et description -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/supplierName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOLAGORA"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/supplierDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CoopÃ©rative agricole"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@android:color/white"
                        android:alpha="0.8"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <!-- Trophy button (visible when both suppliers enabled) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/trophyButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="22dp"
                app:cardBackgroundColor="@android:color/black"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:visibility="gone">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_trophy"
                    app:tint="@color/sca_gold" />

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

        <!-- Corps de la card avec stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:paddingTop="16dp">

            <!-- Stat principale (grande) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/stat_card_background"
                android:padding="20dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/totalProductsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textAppearance="?attr/textAppearanceDisplayMedium"
                    android:textStyle="bold"
                    android:textColor="@color/solagora_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/active_products"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="8dp" />

                <!-- Indicateur de tendance -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/trendIndicatorIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_trending_down_24"
                        app:tint="@color/stat_out_color" />

                    <TextView
                        android:id="@+id/trendIndicatorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vs_last_week"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/stat_out_color"
                        android:layout_marginStart="4dp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Stats secondaires (grille) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Entrants -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/productsInCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:rippleColor="@color/stat_in_color"
                    android:backgroundTint="@color/stat_in_surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/productsInValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textStyle="bold"
                            android:textColor="@color/stat_in_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/incoming_products"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="@color/stat_in_color"
                            android:alpha="0.8" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Sortants -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/productsOutCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:rippleColor="@color/stat_out_color"
                    android:backgroundTint="@color/stat_out_surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/productsOutValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textStyle="bold"
                            android:textColor="@color/stat_out_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/outgoing_products"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="@color/stat_out_color"
                            android:alpha="0.8" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Promotions (conditionnelle) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/productsPromoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:rippleColor="@color/stat_promo_color"
                    android:backgroundTint="@color/stat_promo_surface"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/productsPromoValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textStyle="bold"
                            android:textColor="@color/stat_promo_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Promos"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="@color/stat_promo_color"
                            android:alpha="0.8" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Actions rapides -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewDetailsButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Voir dÃ©tails"
                android:backgroundTint="@color/solagora_primary"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewSortantsButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/outgoing_products"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/stat_out_color"
                android:textColor="@color/stat_out_color"
                app:cornerRadius="12dp"
                android:layout_marginStart="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>