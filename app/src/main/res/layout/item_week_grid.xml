<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center">

        <!-- Badge semaine avec fond coloré -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/weekBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/colorSecondaryContainer"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/weekNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:minWidth="32dp"
                android:gravity="center" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Date range -->
        <TextView
            android:id="@+id/weekRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 - 24 Nov"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:maxLines="2"
            android:lineSpacingMultiplier="1.1" />

        <!-- Indicateurs -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center">

            <!-- Indicateur données disponibles -->
            <ImageView
                android:id="@+id/dataAvailableIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_check_circle"
                app:tint="?attr/colorPrimary"
                android:visibility="gone"
                android:layout_marginEnd="4dp"
                android:contentDescription="@string/data_available" />

            <!-- Indicateur de chargement -->
            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                style="?android:attr/progressBarStyleSmall" />

            <!-- Indicateur semaine courante -->
            <View
                android:id="@+id/currentWeekIndicator"
                android:layout_width="16dp"
                android:layout_height="3dp"
                android:background="@drawable/selected_week_background"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Message "Pas disponible" (masqué par défaut) -->
        <TextView
            android:id="@+id/unavailableMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pas disponible"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorError"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>