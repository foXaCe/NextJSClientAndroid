<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topScaCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    android:backgroundTint="?attr/colorSurface"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header avec gradient et trophée -->
        <RelativeLayout
            android:id="@+id/topScaHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_header_gradient_gold"
            android:padding="20dp">

            <!-- Trophée et titre -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <!-- Trophée avec background circulaire -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardBackgroundColor="@android:color/black"
                    app:cardElevation="4dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_trophy"
                        app:tint="@color/sca_gold" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Titre et sous-titre -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/top_products"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/topScaSupplierName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ANECOOP"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@android:color/white"
                        android:alpha="0.8" />

                </LinearLayout>
            </LinearLayout>

            <!-- Bouton fermer amélioré -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/closeTopScaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:fabSize="mini"
                app:fabCustomSize="36dp"
                android:src="@drawable/ic_close"
                app:tint="@color/sca_gold"
                app:backgroundTint="@android:color/black"
                app:elevation="4dp"
                app:borderWidth="0dp"
                android:contentDescription="@string/close_button" />

        </RelativeLayout>

        <!-- Liste des top produits SCA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">


            <!-- Top 1 -->
            <LinearLayout
                android:id="@+id/topSca1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/rank_1_background"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="1"
                    android:gravity="center"
                    android:background="@drawable/rank_1_badge"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/topSca1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Produit 1"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/topSca1Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Code: ABC123"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <TextView
                    android:id="@+id/topSca1Sca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,250"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- Top 2 -->
            <LinearLayout
                android:id="@+id/topSca2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/rank_2_background"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="2"
                    android:gravity="center"
                    android:background="@drawable/rank_2_badge"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/topSca2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Produit 2"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/topSca2Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Code: DEF456"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <TextView
                    android:id="@+id/topSca2Sca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="950"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- Top 3 -->
            <LinearLayout
                android:id="@+id/topSca3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/rank_3_background"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="3"
                    android:gravity="center"
                    android:background="@drawable/rank_3_badge"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/topSca3Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Produit 3"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/topSca3Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Code: GHI789"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <TextView
                    android:id="@+id/topSca3Sca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="750"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>