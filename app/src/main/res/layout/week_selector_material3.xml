<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weekSelector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSecondaryContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Week Display with Gradient Background -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_week_header"
            android:paddingTop="20dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp">

                <!-- Previous Week - Floating Action Style -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/previousWeekButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:fabSize="mini"
                    app:elevation="4dp"
                    app:backgroundTint="?attr/colorSurface"
                    app:tint="?attr/colorOnSurface"
                    android:src="@drawable/ic_arrow_left"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

                <!-- Week Display Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Week Number with Animation -->
                    <TextView
                        android:id="@+id/weekNumberDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SEMAINE 45"
                        android:textAppearance="?attr/textAppearanceOverline"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:letterSpacing="0.15"
                        android:alpha="0.8" />

                    <!-- Date Range - Large Display -->
                    <TextView
                        android:id="@+id/dateRangeDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 - 12 Novembre"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                    <!-- Year Display -->
                    <TextView
                        android:id="@+id/yearDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:alpha="0.7"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- Next Week - Floating Action Style -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/nextWeekButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:fabSize="mini"
                    app:elevation="4dp"
                    app:backgroundTint="?attr/colorSurface"
                    app:tint="?attr/colorOnSurface"
                    android:src="@drawable/ic_arrow_right"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

            </LinearLayout>

        </FrameLayout>

        <!-- Progress Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progression"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:alpha="0.8" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/weekProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:progress="65"
                app:trackThickness="8dp"
                app:trackCornerRadius="4dp"
                app:indicatorColor="?attr/colorPrimary"
                app:trackColor="?attr/colorSurfaceVariant" />

            <TextView
                android:id="@+id/weekProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65%"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Quick Actions with Segmented Buttons -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/weekToggleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:singleSelection="false"
            app:selectionRequired="false">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/todayButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Aujourd'hui"
                app:icon="@drawable/ic_today"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:iconPadding="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/currentWeekButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Actuelle"
                app:icon="@drawable/ic_calendar_today"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:iconPadding="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/calendarButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Calendrier"
                app:icon="@drawable/ic_calendar"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:iconPadding="4dp" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Expandable Week Grid (Hidden by default) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weekGridRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>