<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state - Material 3 expressive with primary color -->
    <item android:color="?attr/colorOnPrimaryContainer" android:state_selected="true" />
    <!-- Checked state - Material 3 expressive with primary color -->
    <item android:color="?attr/colorOnPrimaryContainer" android:state_checked="true" />
    <!-- Default state - more visible color for unselected items -->
    <item android:color="?attr/colorOnSurface" android:alpha="0.6" />
</selector>